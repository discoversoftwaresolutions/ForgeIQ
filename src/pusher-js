import Pusher from "pusher-js";

export const pusher = new Pusher(import.meta.env.VITE_PUSHER_KEY, {
  // Pusher still expects *some* cluster value, even if using Soketi
  cluster: "mt1", // dummy safe default, required field

  wsHost: "soketi-forgeiq-production.up.railway.app",
  wsPort: 443,
  wssPort: 443,
  forceTLS: true,
  enabledTransports: ["ws", "wss"],
  disableStats: true,
});

export default pusher;
